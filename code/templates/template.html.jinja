<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <style>
            body{ margin:0 100; background:whitesmoke; }
        </style>
    </head>
    <body>
        <h1>Resumo do modelo</h1>
        <table>
            <tr>
                <th>Embedder</th>
                <td>{{ nome_embedder }}</td>
            </tr>
            <tr>
                <th>Nível de granularidade</th>
                <td>{{ nivel }}</td>
            </tr>
            <tr>
                <th>Parâmetros UMAP</th>
                <td>
                    <table>
                        <tr>
                            <th>n_neighbors</th>
                            <td>{{n_neighbors}}</td>
                        </tr>
                        <tr>
                            <th>n_components</th>
                            <td>{{ n_components }}</td>
                        </tr>
                        <tr>
                            <th>min_dist</th>
                            <td>{{ min_dist }}</td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <th>Parâmetros HDBSCAN</th>
                <td>
                    <table>
                        <tr>
                            <th>min_cluster_size</th>
                            <td>{{ min_cluster_size }}</td>
                        </tr>
                        <tr>
                            <th>min_samples</th>
                            <td>{{ min_samples }}</td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>

        <h2>Tópicos</h2>
        <ul>
            <li>Número de tópicos: {{ topic_count }}</li>
            <li># de outliers: {{ outlier_count }}</li>
            <li>% de outliers: {{ outlier_pct }}</li>
        </ul>

        <table>
            <thead>
                <tr>
                    <th>Nome</th> <th>Qtde. documentos</th> <th>Doc. Representativo</th>
                </tr>
            </thead>
            <tbody>
                {% for index, topic in topics.iterrows() %}
                    <tr>
                        <td>{{ topic['Name'] }}</td> <td>{{ topic['Count'] }}</td>
                        <td>
                            {{ topic['svg'] | safe }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <h3>Datamap plot</h3>
        <iframe width="1000" height="550" frameborder="0" seamless="seamless" scrolling="no" srcdoc="{{ dmapplt }}">
            Not supported
        </iframe>
        
    
        <h3>Hierarchical</h3>
        <div>
        </div>
        
        <!-- <h3>Reference table: stock tickers</h3>
        ''' + summary_table_2 + '''
        <h3>Summary table: 2014 stock statistics</h3>
        ''' + summary_table_1 + ''' -->
    </body>
</html>